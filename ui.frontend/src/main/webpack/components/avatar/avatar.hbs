<div class="avatar-wrapper avatar-wrapper--{{color}} avatar-wrapper--{{size}} avatar-wrapper--radius-{{radius}}{{#if isBordered}} avatar-wrapper--bordered{{/if}}{{#if isDisabled}} avatar-wrapper--disabled{{/if}}">
  {{#if src}}
    <img
      src="{{src}}"
      alt="{{alt}}"
      class="avatar avatar__image"
    />
  {{else if initials}}
    <span class="avatar avatar__initials" aria-label="{{alt}}">
      {{initials}}
    </span>
  {{else}}
    <span class="avatar avatar__icon" role="img" aria-label="{{alt}}">
      <svg viewBox="0 0 24 24" fill="currentColor" class="avatar__fallback-svg">
        <path d="M12 12c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm0 2c-3.33 0-10 1.67-10 5v2h20v-2c0-3.33-6.67-5-10-5z"/>
      </svg>
    </span>
  {{/if}}
</div>
